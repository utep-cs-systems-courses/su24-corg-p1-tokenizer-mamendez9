# compiler flags. -g for debug, -03 for optimiziation
CFLAGS=-g -O3

OBJS= tokenizer.o history.o uimain.o tester.o

# first target is built by default
all: uimain
test: tester

# include file dependencies
# tokenizer.o: tokenizer.h
# history.o: history.h
# uimain.o: history.h tokenizer.h
# tester.o: history.h tokenizer.h 

# $@=target, $^=prerequisites
tokenizer: $(OBJS)
	cc -o uimain $(CFLAGS)

tester: tokenizer.o history.o tester.o
	cc -o $(test) $^ $(CFLAGS)

# delets files generated by complation
clean:
	rm -f *.o *.c~ *.h~ tokenizer

run: uimain
	./uimain
